{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} Gestion des departements{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            Paramètres
            <small>Gestion des departements</small>
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li class="breadcrumb-item">Paramètre</li>
            <li class="breadcrumb-item active">Departement</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-sm-6 col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Liste des departement</h4>
                        {% for label, messages in app.flashes(['success','danger']) %}
                            {% for message in messages %}
                                <div class="alert alert-{{label}} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 table-responsive" cellspacing="0" width="100%">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nom</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for departement in departements %}
                                            <tr>
                                                <td>{{ loop.index}}</td>
                                                <td>{{ departement.libelle}}</td>
                                                <td class="text-center">
                                                    <a href="#"><i class="fa fa-eye"></i> </a>|
                                                    <a href="{{ path('departement_edit', {'slug': departement.slug}) }}"><i class="fa fa-edit"></i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Modification</h4>
                        {{ include('departement/_form.html.twig', {'button_label': 'form.btnUpdate'|trans}) }}
                        <div class="row">
                            <div class="col-12 text-right">
                                {{ include('departement/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
