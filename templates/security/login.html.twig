{% extends 'security_layout.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="auth-form-dark text-left p-5">
        <h2>Connexion</h2>
        <form class="pt-5" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <div class="form-group">
                <label for="exampleInputEmail1">{{ 'security.Username'|trans }}</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus autocomplete="off">
                <i class="mdi mdi-account"></i>
            </div>
            <div class="form-group">
                <label for="inputPassword">{{ 'security.Password'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                <i class="mdi mdi-eye"></i>
            </div>
            <div class="form-group">
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> {{ 'security.RememberMe'|trans }}
                    </label>
                </div>
            </div>
            <div class="mt-5">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-block btn-success btn-lg font-weight-medium" type="submit">{{ 'security.btnSignIn'|trans}}</button>
            </div>
            <div class="mt-3 text-center">
                <a href="#" class="auth-link text-white">Mot de passe oubli√©?</a>
            </div>
        </form>
    </div>
{% endblock %}
