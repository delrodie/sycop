{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Gestion des regions{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            Accueil
            <small>Tableau de bord</small>
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li class="breadcrumb-item active">Tableau de bord</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-sm-6 col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Liste des r√©gions</h4>
                        {% for label, messages in app.flashes(['success','danger']) %}
                            {% for message in messages %}
                                <div class="alert alert-{{label}} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 table-responsive" cellspacing="0" width="100%">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nom</th>
                                            <th>Nombre de districts</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for region in regions %}
                                            <tr>
                                                <td>{{ loop.index}}</td>
                                                <td>{{ region.nom}}</td>
                                                <td>{{ region.nombreDistrict}}</td>
                                                <td class="text-center">
                                                    <a href="#"><i class="fa fa-eye"></i> </a>|
                                                    <a href="{{ path('region_edit', {'slug': region.slug}) }}"><i class="fa fa-edit"></i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Enregistrement</h4>
                        {{ include('region/_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
